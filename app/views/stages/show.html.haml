%p#notice= notice


.row-fluid.middle_panel
  .game_description.span8

    %p
      %b Level:
      = @stage.level
    %p
      %b Name:
      = @stage.name
    .carousel-caption
      .lead.description
        Hello this an example caption

    
  .span4
    Awaiting games go here

  .waiting_games.span4
    Challenge a friend:
    =render :partial => "games/new", :locals => {:game => @game, :stage => @stage}
    .games
      -@games.each do |game|
        -opponent = User.opponent_name(game.opponent, current_user)
        .game{:id => game.id}
          =render :partial => "games/game", :locals => {:game => game, :opponent => opponent}

= link_to 'Back', stages_path
