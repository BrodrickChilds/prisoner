.row-fluid.leaderboard
  .span12 
    %title Leaderboard
    .span1
    .span10.my-container
      %ul.inline.leaders-list-options
        %li Sort by:
        %li.leaders-sort= sortable "name"
        %li.leaders-sort= sortable "time_left"
        %li
        %li Options:
        %li
          %span.leaders-hide-by
            %ul.inline
              -if params[:facebook] == "yes"
                %li
                  = link_to ({:sort => params[:sort], :order => params[:order]}) do 
                    = succeed "Show only Facebook friends" do
                      %i.icon-check
              -else
                %li
                  = link_to ({:facebook => "yes", :sort => params[:sort], :order => params[:order]}) do 
                    = succeed "Show only Facebook friends" do
                      %i.icon-check-empty
                    
        %li
      -@leaders.each do |leader|
        .listuser.span10
          .leader-name.span5
            =image_tag(@graph.get_picture(leader.uid))
            =" #{leader.name}"
          .remaining.span5
            ="#{leader.time_left} weeks left"
